extends ../layout


block section-head-nav
    ul.nav.nav-row
        li: a(href='#/player/payments') Пожертвования


block section-side
    .player--payment-robokassa(ng-if='payment.robokassa')
        form(action='{{payment.robokassa.url}}', method='POST')
            input(type='hidden', name='MrchLogin', value='{{payment.robokassa.data.MrchLogin}}')
            input(type='hidden', name='OutSum', value='{{payment.robokassa.data.OutSum}}')
            input(type='hidden', name='InvId', value='{{payment.robokassa.data.InvId}}')
            input(type='hidden', name='SignatureValue', value='{{payment.robokassa.data.SignatureValue}}')
            button.btn.btn-block.btn-primary Оплатить
                span.visible-inline-lg пожертвование

    .player--payment-status(ng-switch='payment.status')
        b.btn.btn-link.link-primary(ng-switch-when='success') Статус:
            b оплачен


block section-body
    .player--payment
        b.btn.btn-link.link-primary.pull-right(href='#/player/payments') Сумма:
            b {{payment.amount | currency:'руб.'}}
